import java.text.SimpleDateFormat;
import java.util.Date;

public class printTest {
    public static void main(String[] args) {
        Date d = new Date();
        SimpleDateFormat sd1 = new SimpleDateFormat("yyyy.MM.dd a hh:mm:ss");
        System.out.println(sd1.format(d));
        SimpleDateFormat sd2 = new SimpleDateFormat("오늘은 M월의 dd번째 날");
        System.out.println(sd2.format(d));
        SimpleDateFormat sd3 = new SimpleDateFormat("오늘은 yyyy년의 DDD번째 날");
        System.out.println(sd3.format(d));
    }
}
